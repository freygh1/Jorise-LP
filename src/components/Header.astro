const menu = ["inicio", "servicios", "planes", "blog", "testimonios", "cont√°ctanos!"];
import { Image } from "astro:assets";
---

<header class="flex justify-around items-center py-4 text-white text-2xl bg-cyan-700/70 sticky top-0">
  <div class=""></div>

  <!-- Desktop Nav -->
  <nav class="hidden sm:flex gap-6 *:text-amber-50 *:hover:text-indigo-800 *:transition-all *:duration-250">
    <a href="#">{menu[0]}</a>
    <a href="#">{menu[1]}</a>
    <a href="#">{menu[3]}</a>
    <a href="#">{menu[2]}</a>
    <a href="#">{menu[menu.length - 1]}</a>
  </nav>

  <!-- Mobile Menu -->
  <div class="sm:hidden relative z-20">
    <input id="menu-toggle" type="checkbox" class="peer hidden" />
    <label for="menu-toggle" class="cursor-pointer flex flex-col gap-1 *:bg-white">
      <span class="block w-6 h-0.5"></span>
      <span class="block w-6 h-0.5"></span>
      <span class="block w-6 h-0.5"></span>
    </label>
    <div
      class="absolute right-0 mt-3 w-40 bg-indigo-700/20 text-white rounded-lg p-3 flex flex-col gap-2 opacity-0 pointer-events-none peer-checked:opacity-100 peer-checked:pointer-events-auto transition *:hover:text-indigo-300">
      <a href="#">{menu[0]}</a>
      <a href="#">{menu[1]}</a>
      <a href="#">{menu[3]}</a>
      <a href="#">{menu[2]}</a>
      <a href="#">{menu[menu.length - 1]}</a>
    </div>
  </div>
</header>
